alert("Digite ZERO para sair.");

do {
    let num = Number(prompt("Digite um número: ").trim());

    if (isNaN(num)) {
        alert("Valor digitado não é um número!");
    } else if (num === 0) {
        alert("Programa encerrado!");
        break;
    } else {
        num % 2 === 0 
            ? alert("O número " + num + " é par!") 
            : alert("O número " + num + " é ímpar!");
    }

} while (true);
