<body>
    <script>
        var num = Number(prompt("Insira o numero"))

        if (num % 2 == 0){
            alert("Par")
        }else if(num % 2 != 0){
            alert("Ímpar")
        }else if(num > 0){
            alert("positivo")
        }else if(num===0){
            alert("Neutro")
        }else{
            alert("negativo")
        }

        alert("fim")
    </script>
</body>
</html>
