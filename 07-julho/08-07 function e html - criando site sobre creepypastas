    <script>
        function mostrarPagina(nome) {
    document.querySelectorAll('.pagina').forEach(div => div.classList.remove('ativa'));

    if (nome === 'inicio') {
        document.getElementById('paginaInicial').classList.add('ativa');
    } else {
        document.getElementById('pagina' + nome.charAt(0).toUpperCase() + nome.slice(1)).classList.add('ativa');
    }
}
    </script>
