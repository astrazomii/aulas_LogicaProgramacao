<body>
    <script>
        var dia = Number(prompt("Informe o dia desejado: "))
        var mes = Number(prompt("Informe o mês desejado (em numeração): "))

        diasPassados = dia
        mesesPassados = (mes - 1) * 30
        total = diasPassados + mesesPassados

        alert("Já se passaram " + total + " dias, desde o início do ano!")
    </script>
</body>
</html>
