    <script>
        var  n1, n2, n3, soma, res
            
            n1 = Number(prompt("Insira a primeira nota: "))
            n2 = Number(prompt("Insira a segunda nota: "))
            n3 = Number(prompt("Insira a terceira nota: "))

        soma = n1 + n2 + n3
        res = soma / 3

            alert("A média é de: " + res)

    </script>
